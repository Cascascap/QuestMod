void 全表示(int 効果番号, int 効果時間)
{
	SYS_画面更新(効果番号, 効果時間, _全表示効果番号, _全表示効果時間);
}

void 全消去()
{
	GOAT_ReleaseAllPartsWithoutSystem();
	字枠セット(0, -2147483648);
}

void 画面揺らし(int 横振幅, int 縦振幅, int 効果時間)
{
	if (!SYS_未読スキップ中確認() && !SYS_既読スキップ中確認())
	{
		SYS_画面揺らし(横振幅, 縦振幅, 効果時間);
	}
}

void 文字表示後画面揺らし(int 横振幅, int 縦振幅, int 効果時間)
{
	_文字表示後画面揺らし横 = 横振幅;
	_文字表示後画面揺らし縦 = 縦振幅;
	_文字表示後画面揺らし時 = 効果時間;
}

void 全画面色(int Ｒ, int Ｇ, int Ｂ)
{
	SYS_全画面色(Ｒ, Ｇ, Ｂ);
}

