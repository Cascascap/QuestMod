int Ｒ８クエスト倉庫(int nMode)
{
	bool bOld = ビュー状態保存モード_ＯＮ();
	bool bFlag = Ｒ８キャラ停止();
	int nRet = g_sStoreQuest.run(nMode, 9111);
	if (!bOld)
	{
		ビュー状態保存モード_ＯＦＦ();
	}
	if (bFlag)
	{
		Ｒ８キャラ停止解除();
	}
	return nRet;
}

