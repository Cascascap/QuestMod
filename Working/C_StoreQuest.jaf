int クエスト倉庫_インデクス(int nRow, int nCol)
{
	return nRow < 0 || nRow >= 3 || nCol < 0 || nCol >= 5 ? -1 : nRow * 5 + nCol;
}

int クエスト倉庫_行番号(int nIndex)
{
	return nIndex < 0 || nIndex >= 15 ? -1 : nIndex / 5;
}

int クエスト倉庫_列番号(int nIndex)
{
	return nIndex < 0 || nIndex >= 15 ? -1 : nIndex % 5;
}

