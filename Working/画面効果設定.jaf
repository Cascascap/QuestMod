void 全表示設定(int 効果番号, int 効果時間)
{
	_全表示効果番号 = 効果番号;
	_全表示効果時間 = 効果時間;
}

void エフェクトキーキャンセル有効初期設定(bool キーキャンセルするかどうか)
{
	if (g_bエフェクトキーキャンセル有効初期設定 == キーキャンセルするかどうか)
	{
		return;
	}
	g_bエフェクトキーキャンセル有効初期設定 = キーキャンセルするかどうか;
	SYS_エフェクトキーキャンセル有効設定(キーキャンセルするかどうか);
	if (!キーキャンセルするかどうか)
	{
		g_ConfigModeDocument.SetShowEffectKeyCancel(true);
	}
}

